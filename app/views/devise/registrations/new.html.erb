<div class="contents">
  <div class="form_users">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :username, :placeholder => "Username", autofocus: true %>
      </div>

      <div class="field">
        <%= f.email_field :email,:placeholder => "Email", autofocus: true %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, :placeholder => "password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation,:placeholder => "password", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>>