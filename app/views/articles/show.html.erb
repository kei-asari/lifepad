<div class="contents">
  <div class="content_top clearfix">
    <div class="article_thumbnail">
      <div class="test_image"><%= image_tag @article.thumbnail %></div>
    </div>
    <div class="article_title">
        <p><%= @article.title %></p>
    </div>
    <% if user_signed_in? %>
      <pre>
        <div id="overlay">
          <%= link_to '編集', "/articles/#{@article.id}/edit", method: :get %>
          <%= link_to '削除', "/articles/#{@article.id}", method: :delete %>
          <p id="close">close</p>
        </div>
        <div id="edit_btn"><i class="fa fa-cog fa-3x"></i></div>
      </pre>
    <%end%>
    <div class="article_clip">
    <% if user_signed_in? %>
      <% if @cliped.present? %>
        <div class="clip_btn">
          <%= link_to 'clip削除', clip_path(@cliped), method: :delete %>
        </div>
      <% else %>
        <div class="clip_btn">
          <%= link_to "clip", clips_path(article_id: @article.id ), method: :post %>
        </div>
      <% end%>
    <% else %>
    <div class="clip_btn">
        <%= link_to "clip", '/users/sign_in', method: :get %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="content_bottom">
    <div class="text_content">
      <%= raw(@article.content) %>
    </div>
  </div>
</div>